{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@libs*": ["../core/libs*"],
      "@native*": ["../core/libs/native*"],
      "@declares*": ["../core/declares*"],
      "@utils": ["../core/utils"],
      "@entities": ["./libs/db/entities"], 
      "@config*": ["../config*"],
      "@tsv": ["./index.ts"]
    },
    "outDir": "../../dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "es2017", "dom"],
    "types": ["@types/node", "@citizenfx/server", "@citizenfx/client"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./**/*", "../config/**/*", "../core/**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
