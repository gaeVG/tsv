{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@libs*": ["./libs*"],
      "@native*": ["./libs/native*"],
      "@declares*": ["./declares*"],
      "@utils": ["./utils"],
      "@config*": ["../config*"]
    },
    "outDir": "../../dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "es2017", "dom"],
    "types": ["@types/node", "@citizenfx/server", "@citizenfx/client"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./**/*", "../config/**/*", "@citizenfx/server", "@citizenfx/client"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
