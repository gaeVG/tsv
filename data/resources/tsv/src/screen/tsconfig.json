{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "es6",
    "paths": {
      "@native*": ["../core/libs/native*"],
      "@libs*": ["../core/libs*"],
      "@declares*": ["../core/declares*"],
      "@utils": ["../core/utils"],
      "@config*": ["../config*"],

    },
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "lib": ["esnext", "dom"],
    "types": ["@types/node", "@citizenfx/client"],
    "jsx": "react",
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
