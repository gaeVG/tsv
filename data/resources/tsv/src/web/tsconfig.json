{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@libs*": ["../core/libs*"],
      "@native*": ["../core/libs/native*"],
      "@declares*": ["../core/declares*"],
      "@utils": ["../core/utils"],
      "@config*": ["../config*"],
      "@store": ["./stores"],
      "@hooks": ["./hooks"],
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "target": "es6",
    "lib": ["esnext", "dom"],
    "types": ["@types/node", "@citizenfx/client"],
    "jsx": "react",
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["./**/*", "../core/**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
